<%= form_for(@story, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @story.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
      <h4><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h4>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :role, "Papel", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :role, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :action, "Ação", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :action, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reason, "Razão", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reason, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= select("story", "status",['Fazer', 'Fazendo', 'Feito'], {include_blank: true}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimate, "Estimativa", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
  <%= select("story", "estimate",['3 dias', '1 semana', '2 semanas', '3 semanas', '4 ou mais semanas'], {include_blank: true}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :acceptance, "Critérios de Aceitação", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :acceptance, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :observations, "Observações", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observations, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :task, "Tarefas", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :task, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :release, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :release, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_id, "Projeto", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select(:project_id, Project.all, :id, :name,  prompt: true)%>
    </div>
  </div>

    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Criar História", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
