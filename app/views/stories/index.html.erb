<div class="page-header">
  <%= link_to new_story_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo História
  <% end %>
  <div class="row">
    <div class="col-sm-3">
      <%= form_tag(stories_path, :method => :get) do %>
      <%= text_field_tag 'search', nil, placeholder: 'Descrição', class: "form-control" %>
    </div>
    <%= submit_tag "Pesquisa", class: "btn btn-primary" %>
  </div>
  <% end %>

  <h1>Lista de Histórias</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Descrição</th>
            <th>Status</th>
            <th>Estimativa</th>
            <th>Critérios</th>
            <th>Observação</th>
            <th>Tarefas</th>
            <th>Release</th>
            <th>Projeto</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @stories) do |story| %>
            <td><%= story.description %></td>
            <td><%= story.status %></td>
            <td><%= story.estimate %></td>
            <td><%= story.acceptance %></td>
            <td><%= story.observations %></td>
            <td><%= story.task %></td>
            <td><%= story.release %></td>
            <td><%= story.project.name if story.project %></td>
            <td><%= link_to 'Detalhes', story %></td>
        <td><%= link_to 'Editar', edit_story_path(story) %></td>
        <td><%= link_to 'Deletar', story, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
